{
  "id": "platform-demo",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "azwickey/wwsko-demo",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0, "containerPort": 8080, "protocol": "tcp"}
      ],
      "forcePullImage": true
    }
  },
  "healthChecks": [{
    "path": "/health",
    "portIndex": 0,
    "protocol": "HTTP",
    "gracePeriodSeconds": 300,
    "intervalSeconds": 60,
    "timeoutSeconds": 20,
    "maxConsecutiveFailures": 3,
    "ignoreHttp1xx": false
  }],
  "env": {
    "SPRING_PROFILES_ACTIVE": "mesos"
  },
  "instances": 1,
  "cpus": 2,
  "mem": 1024
}